<script>
//handle north movement button
$('#moveNorth').click(() => {
  $.ajax({
    url: `/moveNorth`,
    type: "GET",
    success: res => {
      $("#gameLog").append('\n');
      $("#gameLog").append(res.locName);
      $("#gameLog").append('\n');
      $("#gameLog").append('    ' + res.locText);
      $("#gameLog").append('\n');
      scrollToBottom();
    }
  });
});

